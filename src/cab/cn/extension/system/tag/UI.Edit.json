{
    "_form": {
        "window": 1,
        "columns": 3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,,,,placeholder=（标签名称不能重复）,normalize=text:255",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，标签名称重复！",
                            "config": {
                                "uri": "/api/x-tag/existing",
                                "method": "POST",
                                "params": {
                                    "sigma": "PROP:app.sigma"
                                }
                            }
                        }
                    ]
                },
                {
                    "metadata": "icon,图标,,,,placeholder=请输入图标,maxLength=255"
                },
                {
                    "metadata": "active,启用,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "description,描述,24,,aiTextArea,rows=3"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.tag.save",
            "$opDelete": "act.tag.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的标签信息更新成功！",
            "removed": "当前标签信息已删除成功！"
        }
    }
}